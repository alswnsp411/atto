<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productdetail_page_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="match_parent"
            android:layout_height="288dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >
            <ImageButton
                android:id="@+id/scrapBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:layout_gravity="right"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_scrap" />

            <TextView
                android:id="@+id/brandField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="브랜드 필드" />
            <TextView
                android:id="@+id/productNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:maxLines="2"
                android:gravity="center_vertical"
                android:text="상품명 필드" />
            <TextView
                android:id="@+id/priceField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:text="원" />

        </LinearLayout>
        <Button
            android:id="@+id/productPageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="상품 페이지 바로 가기"
            android:layout_margin="20dp"
            android:background="@drawable/colorbutton_round"
            />
    </LinearLayout>
</FrameLayout>